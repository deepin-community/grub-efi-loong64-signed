#! /bin/sh
set -e

config_item ()
{
    if [ -f /etc/default/grub ]; then
        . /etc/default/grub || return
        for x in /etc/default/grub.d/*.cfg; do
            if [ -e "$x" ]; then
                . "$x"
            fi
        done
    fi
    eval echo "\$$1"
}

case $1 in
    configure)
        bootloader_id="$(config_item GRUB_DISTRIBUTOR | tr A-Z a-z | \
                         cut -d' ' -f1)"
       	if [ -n "$bootloader_id" ] && [ -d "/boot/efi/EFI/" ]; then #镜像构建chroot环境没有挂载/boot/efi/EFI/目录，这里跳过grub-install
            grub-install --force-extra-removable --bootloader-id=$bootloader_id
        fi
        ;;
esac



exit 0
